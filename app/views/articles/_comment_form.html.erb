<h3>Post a Comment</h3>

<%= form_for @article.comments.new do |f| %>
  <%= f.hidden_field :article_id %>
  <p>
    <%= f.label :author_name, "Your Name"  %>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<%= d @article %>
<%= d @articles %>
<% end %>
